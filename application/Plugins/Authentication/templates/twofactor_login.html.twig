{% extends "core/base.html.twig" %}
{% block ecmascripts %}
<script src="/static/functions/cinfo.js" type="text/javascript"></script>
{% endblock %}

{% block content %}
    <form method="POST" action="/twofactor/login" autocomplete="off" >
        <input type="hidden" name="token" value="{{ secretary.getToken("users.twofactor.login") }}" />
        <input class="text-input password" type="text" name="code" placeholder="2FA Code" autofocus/>
        <div id="options">
            <input id="login_button" type="submit" name="submit" value="login" />
        </div>
        <div id="forgottenpw">
            <span><a href="/twofactor/recover">lost secret key</a></span>
        </div>
    </form>
{% endblock %}
