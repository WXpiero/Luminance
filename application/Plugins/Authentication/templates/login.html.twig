{% extends "core/base.html.twig" %}
{% block ecmascripts %}
    <script src="/static/functions/cinfo.js" type="text/javascript"></script>
{% endblock %}

{% block content %}
    <form method="POST" action="/login" >
        <input type="hidden" name="token" value="{{ secretary.getToken("users.login") }}" />
        <div id="username">
            <input class="text-input" type="text" name="username" placeholder="Username" autofocus/>
        </div>
        <div id="password">
            <input class="text-input" type="password" name="password" placeholder="Password" />
        </div>
        <div id="options">
            <input  type="hidden" name="cinfo" value="auth" id="cinfo" />
            <input  type="hidden" name="iplocked" value="0" /><label for="iplocked"><input id="iplocked" type="checkbox" name="iplocked" value="1" /> Lock this session to my IP address</label>
            <p>
            <input type="hidden" name="keeploggedin" value="0" /><label for="keeploggedin"><input id="keeploggedin" type="checkbox" name="keeploggedin" value="1" /> Stay logged in</label>
            <input id="login_button" type="submit" name="submit" value="login" />
            </p>
        </div>
        <div id="forgottenpw">
            <span><a href="/users/recover">forgotten password</a></span>
        </div>
    </form>
{% endblock %}
